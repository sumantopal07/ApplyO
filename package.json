{
  "name": "applyo",
  "version": "1.0.0",
  "description": "ApplyO - One profile. Infinite applications.",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "dev:web": "npm run dev --workspace=@applyo/web",
    "dev:gateway": "npm run dev --workspace=@applyo/api-gateway",
    "dev:candidate": "npm run dev --workspace=@applyo/candidate-service",
    "dev:company": "npm run dev --workspace=@applyo/company-service",
    "dev:application": "npm run dev --workspace=@applyo/application-service",
    "dev:document": "npm run dev --workspace=@applyo/document-service",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "npm run migrate --workspace=@applyo/database",
    "db:seed": "npm run seed --workspace=@applyo/database"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
